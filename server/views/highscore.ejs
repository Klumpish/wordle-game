<!-- highscore.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Highscores</title>
</head>
<body>
  <h1>Highscores</h1>
  <table border="1">
    <thead>
      <tr>
        <th>Name</th>
        <th>Time (s)</th>
        <th>Guesses</th>
        <th>Word Length</th>
        <th>Repeating Characters</th>
      </tr>
    </thead>
    <tbody>
      <% highscores.forEach(highscore => { %>
        <tr>
          <td><%= highscore.name %></td>
          <td><%= highscore.time %></td>
          <td><%= highscore.guesses %></td>
          <td><%= highscore.wordLength %></td>
          <td><%= highscore.repeatingChar ? 'Yes' : 'No' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
